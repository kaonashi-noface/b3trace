{
    "compilerOptions": {
        "target": "ES2024",
        "module": "CommonJS",
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"]
        },
        "alwaysStrict": true,
        "allowJs": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": false
    },
    "watchOptions": {
        "watchFile": "useFsEvents",
        "watchDirectory": "useFsEvents",
        "fallbackPolling": "dynamicPriority"
    },
    "include": ["src", "test"],
    "exclude": ["node_modules", "dist"]
}
