{
    "name": "b3trace",
    "version": "1.0.2",
    "description": "Object that represents a B3 Trace based on the OpenZipkin specifications: https://github.com/openzipkin/b3-propagation",
    "author": {
        "name": "no_face"
    },
    "homepage": "https://github.com/kaonashi-noface/b3trace",
    "repository": {
        "type": "git",
        "url": "https://github.com/kaonashi-noface/b3trace.git"
    },
    "main": "src/index.js",
    "types": "@types/index.d.ts",
    "scripts": {
        "build": "rm -rf dist && ./node_modules/.bin/webpack-cli",
        "test": "./node_modules/.bin/jest --colors \"test/.*(test.ts)\"",
        "test:unit": "./node_modules/.bin/jest --colors \"test/unit/.*(test.ts)\"",
        "test:coverage": "./node_modules/.bin/jest --colors --coverage \"test/unit/.*(test.ts)\"",
        "test:ci-coverage": "./node_modules/.bin/jest --colors --ci --runInBand --reporters=default --reporters=jest-junit --coverage \"test/unit/.*(test.ts)\"",
        "coveralls": "./node_modules/coveralls/bin/coveralls.js < coverage/lcov.info",
        "publish:dry-run": "npm publish ./dist --dry-run"
    },
    "devDependencies": {
        "@types/jest": "^27.0.3",
        "@types/node": "^16.11.10",
        "copy-webpack-plugin": "^10.0.0",
        "coveralls": "^3.1.1",
        "jest": "^27.4.3",
        "jest-junit": "^13.0.0",
        "ts-jest": "^27.0.7",
        "ts-loader": "^9.2.6",
        "ts-node": "^10.4.0",
        "tsconfig-paths": "^3.12.0",
        "tsconfig-paths-webpack-plugin": "^3.5.2",
        "typescript": "^4.5.2",
        "webpack": "^5.64.4",
        "webpack-cli": "^4.9.1",
        "webpack-node-externals": "^3.0.0"
    },
    "keywords": [
        "b3trace",
        "b3",
        "trace",
        "context",
        "propagation",
        "object"
    ],
    "license": "ISC"
}
